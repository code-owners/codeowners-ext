{
    "name": "codeowners-ext",
    "description": "Browser extension to easily code review with GitHub codeowners",
    "version": "1.0.0",
    "main": "index.js",
    "dependencies": {
        "codeowners-api": "^2.0.0"
    },
    "devDependencies": {
        "chrome-webstore-upload-cli": "^1.1.1",
        "jszip-cli": "^1.4.24",
        "webpack": "^4.2.0",
        "webpack-cli": "^2.0.13"
    },
    "scripts": {
        "build": "rm -rf ext && webpack --config webpack.config.js && npm run postbuild",
        "postbuild": " cp ./src/background.js ./ext/dist && cp manifest.json ./ext && cp -rf src/popup ./ext", 
        "zip": "node ./node_modules/.bin/jszip -o codeowners-ext.zip ./ext",
        "upload": "webstore upload --source codeowners-ext.zip --extension-id $EXTENSION_ID --client-id $CLIENT_ID --client-secret $CLIENT_SECRET --refresh-token $REFRESH_TOKEN",
        "deploy": "webstore publish --client-id $CLIENT_ID --client-secret $CLIENT_SECRET --refresh-token $REFRESH_TOKEN"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/elaygl/codeowners-ext.git"
    },
    "keywords": [
        "codeowners",
        "github"
    ],
    "author": "elaygl",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/elaygl/codeowners-ext/issues"
    },
    "homepage": "https://github.com/elaygl/codeowners-ext#readme"
}

{
    "name": "Codeowners",
    "description": "Easier codeowners code reviews",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["dist/background.js"]
    },
    "browser_action": {
        "default_popup": "popup/popup.html"
      },
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png" 
    },
    "permissions": [
        "tabs",
        "activeTab",
        "webNavigation",
        "storage"
      ],
    "content_scripts": [
        {
            "matches": [
                "*://github.com/*"
            ],
            "css": [],
            "js": [
                "dist/ext.js"
            ]
        }
    ]
}